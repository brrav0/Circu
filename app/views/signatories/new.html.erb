
<% provide(:title, 'Ajouter signataire') %>

<h3>Ajout des nouveaux signataire</h3>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@signatory) do |f| %>
      <%= render 'shared/error_messages_signatory' %>
 
      <%= f.label :bank_id %>
      <%= f.collection_select(:bank_id, Bank.all, :id, :name, :include_blank => true) %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>


<%= f.submit "Ajoutez signataire", class: "btn btn-primary" %>

<% end %>

  </div>
</div>


